@page "/Gasprices"
@inject HttpClient Http

<PageTitle>Gasprices</PageTitle>

<h1>Gasprices</h1>

<h2>Miles 95 Gas Prices</h2>
@if (miles95prices == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Price</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var result in miles95prices)
        {
            <tr>
                <td>@result.Date</td>
                <td>@result.Price</td>
            </tr>
        }
        </tbody>
    </table>
}

<h2>Diesel Prices</h2>
@if (dieselPrices == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Price</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var result in dieselPrices)
        {
            <tr>
                <td>@result.Date</td>
                <td>@result.Price</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private Miles95Price[]? miles95prices;
    private DieselPrice[]? dieselPrices;

    protected override async Task OnInitializedAsync()
    {
        miles95prices = await Http.GetFromJsonAsync<Miles95Price[]>("https://magsapi.onrender.com/api/miles95");
        dieselPrices = await Http.GetFromJsonAsync<DieselPrice[]>("https://magsapi.onrender.com/api/diesel");
    }

    public class Miles95Price
    {
        public string Date { get; set; }
        public string Price { get; set; }
    }

    public class DieselPrice
    {
        public string Date { get; set; }
        public string Price { get; set; }
    }
}